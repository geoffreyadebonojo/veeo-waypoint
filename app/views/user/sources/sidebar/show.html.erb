<% if @facade.saved? %>
  <h3><%= link_to @facade.topic_title, topic_path(@facade.topic), target: "_parent"%></h3>

  <h4><%= @facade.question_text %></h4>
  <div class="new-note-form">
    <%= form_for [@facade.source, @facade.new_note] do |f| %>
      <%= f.text_area :text, placeholder: "Something worth remembering? Take a note.", required: true, class: "new-note-field" %>
      <%= f.submit "Save Note"%>
    <% end %>
  </div>
  <div id="notes">
    <% @facade.notes.each do |note| %>
      <%= note.text %> <br />
      <hr />
    <% end %>
  </div>
<% else %>
  <%= button_to "Save", question_sources_path(question_id: @facade.question_id),
                        params: { source: @facade.source_params },
                        method: :post,
                        id: "save-source" %>
<% end %>
