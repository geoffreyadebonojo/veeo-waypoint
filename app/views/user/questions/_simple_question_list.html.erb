<div class="centered-content">
  <div class="list">
    <% questions.each do |question| %>
    <ul>
        <div class="question">
          <div class="search-button"><%= link_to search_path(question: question.id) do %>
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                      <% end %>
          </div>
          <div class="question-text"><%= question.text %></div>

          <div class="delete-button"><%= link_to topic_question_path(topic, question), method: :delete, data: {confirm: "Are you sure you want to delete #{question.text} and everything it leads to?"} do %>
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                      <% end %>
          </div>
        </div>
        </ul>
    <% end %>
  </div>
</div>
