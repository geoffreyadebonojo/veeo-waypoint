<ul>
  <% questions.each do |question| %>
    <div class="question">
      <li>
        <%= link_to 'Search', search_path(question: question.text), class: 'search-link' %>
        <%= question.text %>
        <%= button_to "Delete Question", topic_question_path(topic, question), method: :delete, data: {confirm: "Are you sure you want to delete #{question.text} and everything it leads to?"}, id: "delete-question-btn" %>
      </li>
    </div>
  <% end %>
</ul>
