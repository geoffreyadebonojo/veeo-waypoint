<ul>
  <% questions.each do |question| %>
    <div class="question">
      <li>
        <%= link_to 'Search', search_path(topic: question.topic.id, question: question.text, question_id: question.id), class: 'search-link' %>
        <%= question.text %>
        <%= button_to 'Delete Question', topic_question_path(topic, question), method: :delete, class: 'delete-btn', data: {confirm: "Are you sure you want to delete #{question.text} and everything it leads to?"} %>
      </li>
    </div>
  <% end %>
</ul>
